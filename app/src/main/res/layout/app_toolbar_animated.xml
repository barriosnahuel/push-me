<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_appbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_appbar_top_height"
    android:background="@drawable/app_toolbar_background">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/app_collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_scrollFlags="scroll|snap"
        app:titleEnabled="false">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/app_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            app:titleMarginTop="@dimen/app_appbar_top_title_margin_top"
            tools:navigationIcon="@mipmap/app_ic_launcher"
            tools:title="A screen title"/>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>