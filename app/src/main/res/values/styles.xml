<resources>

    <style name="MyCustomTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_size_default</item>
    </style>

    <style name="MyCustomTheme.Form" />

    <style name="MyCustomTheme.Form.Label">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="MyCustomTheme.DefaultLayout">
        <item name="android:paddingStart">@dimen/material_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/material_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/material_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/material_horizontal_padding</item>
    </style>

    <style name="MyCustomTheme.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/material_subtitle_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="MyCustomTheme.ButtonListItem">
        <!--<item name="android:capitalize">words</item>-->
    </style>

</resources>
